  "components": {
    "schemas": {
      "ResponseType": {
        "type": "string",
        "enum": [
          "urn:iudx:aaa:Success",
          "urn:iudx:aaa:MissingInformation",
          "urn:iudx:aaa:InvalidInput",
          "urn:iudx:aaa:InvalidRole",
          "urn:iudx:aaa:AlreadyExists",
          "urn:iudx:aaa:MissingToken",
          "urn:iudx:aaa:InvalidToken",
          "urn:iudx:aaa:InvalidScope"
        ]
      },
      "UserProfile": {
        "title": "UserProfile",
        "type": "object",
        "description": "",
        "properties": {
          "email": {
            "type": "string",
            "format": "email"
          },
          "phone": {
            "type": "string",
            "pattern": "^[9876]\\d{9}$",
            "example": "9876543210"
          },
          "name": {
            "type": "object",
            "properties": {
              "title": {
                "type": "string",
                "enum": [
                  "Mr.",
                  "Ms.",
                  "Mrs.",
                  "Dr."
                ]
              },
              "first_name": {
                "type": "string",
                "maxLength": 30,
                "example": "Foo"
              },
              "last_name": {
                "type": "string",
                "maxLength": 30,
                "example": "Bar"
              }
            }
          },
          "roles": {
            "type": "array",
            "uniqueItems": true,
            "items": {
              "type": "string",
              "enum": [
                "provider",
                "consumer",
                "onboarder",
                "ingester"
              ]
            }
          }
        }
      },
      "ErrorObject": {
        "title": "ErrorObject",
        "type": "object",
        "properties": {
          "type": {
            "$ref": "#/components/schemas/ResponseType"
          },
          "title": {
            "type": "string"
          },
          "details": {
            "type": "string"
          }
        }
      }
    },

                    },
                    "details": {
                      "$ref": "#/components/schemas/UserProfile"
                    }
                  }
                },
                "examples": {
                  "Success": {
                    "value": {
                      "type": "urn:iudx:aaa:Success",
                      "details": {
                        "email": "user@example.com",
                        "phone": "9876543210",
                        "name": {
                          "title": "Mr.",
                          "first_name": "Foo",
                          "last_name": "Bar"
                        },
                        "roles": [
                          "provider"
                        ]
                      }
                    }
                  }
